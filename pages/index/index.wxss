.tag{
  display: block;
  padding:0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 1;
}

.tag::before{
  display: block;
  content: attr(data-tag);
  padding:24rpx 0;
  font-size: 32rpx;
  border-bottom: 1px #eaeaea solid;
}


.function-list{
  background-color: #fff;
  text-align: center;
  line-height: 1;
}

.function-list navigator{
  padding:50rpx 0;
  display: inline-block;
  width: 50%;
}

.function{
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  border-right: 1px #d8d8d8 solid;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
