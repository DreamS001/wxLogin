/* scoll 懒加载 */
.hide{
  display: none;
}

.loading-container{
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  width: 100%;
  padding:20rpx 0;
  font-size: 24rpx;
  color:#999;
}

.loading{
  width: 40rpx;
  height: 40rpx;
  border:2px #ccc solid;
  border-left: 2px red solid;
  border-radius: 50%;
  -webkit-animation:loading .7s linear infinite;
  animation:loading .7s linear infinite;
}
@-webkit-keyframes loading{from{-webkit-transform:rotate(0);} to{-webkit-transform:rotate(359deg);}}
@keyframes loading{from{-webkit-transform:rotate(0);transform:rotate(0);} to{-webkit-transform:rotate(359deg);transform:rotate(359deg);}}

.to-top{
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
  width: 60rpx;
  height: 60rpx;
}